<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center p-2 p-2 border-bottom">
    <h1 class="h4">Dashboard</h1>
    <div class="btn-toolbar mb-1 mb-md 0">
        <div class="btn group me-2">
            <a href="/add" class="btn btn-sm btn-outline-secondary">+ New User</a>
        </div>
    </div>
</div>

<!-- Message Show -->
<% messages.forEach(msg => { %>
 <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= msg %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
 </div>
<% }) %>

<!-- Search -->
<form action="/" method="POST">
    <div class="col p-2">
        <div class="row">
            <div class="col">
                <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search" aria-label="Search">
            </div>
            <div class="col fw-lighter">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </div>
        </div>
    </div>
</form>

<!-- Customers Table -->
<div class="table-responsive m-2">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Mobile Number</th>
                <th scope="col">Email</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
            <% customers.forEach(customer => { %>
             <tr class="align-middle">
                <td><%= customer.firstName %></td>
                <td><%= customer.lastName %></td>
                <td><%= customer.phoneNumber %></td>
                <td><%= customer.email %></td>
                <td>
                    <div class="d-flex flex-row justify-content-end gap-2">
                        <a href="/view/<%= customer._id %>" type="button" class="btn btn-primary btn-small">
                            <i class="bi bi-eye-fill"></i>
                        </a>
                        
                        <a href="/edit/<%= customer._id %>" type="button" class="btn btn-warning btn-small">
                            <i class="bi bi-pencil"></i>
                        </a>
                        
                        <a href="/delete/<%= customer._id %>" method="GET" class="position-relative">
                            <button type="submit" class="btn btn-danger btn-small" form="deleteCustomer" onclick="checker()">
                                <i class="bi bi-trash3-fill"></i>
                            </button>
                        </a>
                    </div>
                </td>
             </tr>
            <% }) %>
        </tbody>
    </table>
</div>
