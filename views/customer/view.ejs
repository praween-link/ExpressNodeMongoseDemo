<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center p-2 border-bottom">
    <h3 class="h4">View Customer</h3>
    <div class="btn-toolbar mb-1 mb-md 0">
        <div class="btn group me-2">
            <a href="/edit/<%= customerDetails._id %>" class="btn btn-sm btn-outline-secondary">Edit</a>
        </div>
    </div>
</div>

<!-- Stack of Routes -->
<div class="col p-2">
    <div class="row">
        <div class="col">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                <li class="breadcrumb-item active">Customer Details</li>
            </ol>
        </div>
        <div class="col text-end fw-lighter">
            <b>ID: <%= customerDetails._id %></b>
        </div>
    </div>
</div>

<!-- Message Show -->
<% messages.forEach(msg => { %>
    <div class="p-2">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
         </div>
    </div>
   <% }) %>

<!-- Form -->
<form action="/view" method="GET" class="p-2">
    <div class="row form-group mb-4">
        <div class="col">
            <label for="firstName">First Name</label>
            <input disabled type="text" class="form-control" id="firstName" name="firstName" value="<%= customerDetails.firstName %>" placeholder="First Name" required>
        </div>

        <div class="col">
            <label for="lastName">Last Name</label>
            <input disabled type="text" class="form-control" id="lastName" name="lastName" value="<%= customerDetails.lastName %>" placeholder="Last Name" required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="phoneNumber">Phone Number</label>
            <input disabled type="text" class="form-control" id="phoneNumber" name="phoneNumber" value="<%= customerDetails.phoneNumber %>" placeholder="Phone Number" required>
        </div>

        <div class="col">
            <label for="email">Email</label>
            <input disabled type="text" class="form-control" id="email" name="email" value="<%= customerDetails.email %>" placeholder="Email" required>
        </div>
    </div>

    <div class="form-group">
        <label for="customerDetails">Customer Details</label>
        <textarea disabled class="form-control" id="customerDetails" name="customerDetails" cols="30" rows="5" placeholder="Customer Details"><%= customerDetails.details %></textarea>
    </div>
    
</form>